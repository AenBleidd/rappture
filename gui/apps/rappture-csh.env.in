# If you install Rappture elsewhere, edit the line below:
set installdir=@prefix@

set bindir=${installdir}/bin
set libdir=${installdir}/lib

set path = ( $bindir $path )

setenv TCLLIBPATH "${libdir}/vtk $TCLLIBPATH"

setenv LD_LIBRARY_PATH "${libdir}:${libdir}/vtk:$LD_LIBRARY_PATH"

setenv DYLD_LIBRARY_PATH "${libdir}:${libdir}/vtk:$DYLD_LIBRARY_PATH"

setenv MATLABPATH  "${libdir}/matlab:$MATLABPATH"
setenv OCTAVE_PATH "${libdir}/octave:$OCTAVE_PATH"
setenv PERL5LIB    "${libdir}/perl:$PERL5LIB"
setenv RUBYLIB	   "${libdir}/ruby:$RUBYLIB"
setenv TCL_LIBRARY "${libdir}/tcl8.4:$TCL_LIBRARY"
setenv TK_LIBRARY  "${libdir}/tk8.4:$TK_LIBRARY"
setenv PYTHONPATH  "${libdir}/python2.5/site-packages:$PYTHONPATH"
