
SHELL		= @SHELL@

srcdir		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
datadir		= @datadir@
datarootdir	= @datarootdir@
mandir		= @mandir@
includedir	= @includedir@

pkgdatadir	= $(datadir)/$(PKG_DIR)
pkglibdir	= $(libdir)/$(PKG_DIR)
pkgincludedir	= $(includedir)/$(PKG_DIR)
top_builddir	= .

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@
INSTALL_DATA	= @INSTALL_DATA@
INSTALL_SCRIPT	= @INSTALL_SCRIPT@

SCRIPTS	= \
		$(srcdir)/driver \
		$(srcdir)/nanovis-test \
		rappture \
		$(srcdir)/rerun \
		rappture.env \
		simsim  \
		$(srcdir)/simsim.tcl

WINDOWS_SCRIPTS =  \
		$(srcdir)/rappture.cmd \
		$(srcdir)/driver.cmd \
		$(srcdir)/rerun.cmd 

all: 

install: 
	$(INSTALL) -d $(bindir)
	@for i in $(SCRIPTS); do \
	    echo "Installing $$i" ; \
	    $(INSTALL) -m 555 $$i $(bindir) ; \
	done 

clean:

distclean: clean
	$(RM) rappture.env rappture simsim
	$(RM) Makefile *~ 

