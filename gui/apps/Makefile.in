
SHELL		= @SHELL@
TCLSH		= @TCLSH@
srcdir		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
datadir		= @datadir@
datarootdir	= @datarootdir@
mandir		= @mandir@
includedir	= @includedir@

pkgdatadir	= $(datadir)/$(PKG_DIR)
pkglibdir	= $(libdir)/$(PKG_DIR)
pkgincludedir	= $(includedir)/$(PKG_DIR)
top_builddir	= .

MKDIR_P		= @MKDIR_P@
INSTALL		= @INSTALL@

SCRIPTS	= \
		about \
		copy_rappture_examples \
		encodedata \
		$(srcdir)/launcher.tcl \
		$(srcdir)/grabdata \
		$(srcdir)/nanovis-test \
		$(srcdir)/vtkcontour-test \
		$(srcdir)/vtkheightmap-test \
		$(srcdir)/vtkstreamlines-test \
		$(srcdir)/vtkviewer-test \
		$(srcdir)/vtkvolume-test \
		$(srcdir)/flowvis-test \
		$(srcdir)/rpdiff \
		$(srcdir)/rptimes \
		rappture \
		rappture.env \
		rappture-csh.env \
		rappture.use \
		rerun \
		simsim  \
		xmldiff

WINDOWS_SCRIPTS =  \
		$(srcdir)/rappture.cmd \
		$(srcdir)/driver.cmd \
		$(srcdir)/rerun.cmd

.PHONY: all install clean distclean

all:

install: all
	$(MKDIR_P) -m 0755 $(bindir)
	@for i in $(SCRIPTS); do \
	    echo "Installing $$i" ; \
	    $(INSTALL) -m 0555 $$i $(bindir) ; \
	done

clean:

distclean: clean
	$(RM) about copy_rappture_examples encodedata rappture.env rappture-csh.env rappture rappture.use rerun simsim xmldiff
	$(RM) Makefile *~

