# ======================================================================
#
# If you install Rappture elsewhere, edit the line below:
RAPPTURE_INSTALL_DIR=@prefix@

# no need to edit the rest...
export PATH=$RAPPTURE_INSTALL_DIR/bin:$PATH
export PERL5LIB=$RAPPTURE_INSTALL_DIR/lib/perl5:$RAPPTURE_INSTALL_DIR/lib64/perl5:$PERL5LIB
export PYTHONPATH=$RAPPTURE_INSTALL_DIR/lib/python@PYTHON_VERSION@/site-packages:$RAPPTURE_INSTALL_DIR/lib64/python@PYTHON_VERSION@/site-packages:$PYTHONPATH
export MATLABPATH=$RAPPTURE_INSTALL_DIR/lib/matlab:$MATLABPATH
export OCTAVE_PATH=:$RAPPTURE_INSTALL_DIR/lib/octave:$OCTAVE_PATH
export LD_LIBRARY_PATH=$RAPPTURE_INSTALL_DIR/lib:$RAPPTURE_INSTALL_DIR/lib/vtk:$RAPPTURE_INSTALL_DIR/lib64:$LD_LIBRARY_PATH
export DYLD_LIBRARY_PATH=$RAPPTURE_INSTALL_DIR/lib:$RAPPTURE_INSTALL_DIR/lib/vtk:$DYLD_LIBRARY_PATH
export TCL_LIBRARY=$RAPPTURE_INSTALL_DIR/lib/tcl8.4:$RAPPTURE_INSTALL_DIR/lib64/tcl8.4:$TCL_LIBRARY
export TCLLIBPATH="$RAPPTURE_INSTALL_DIR/lib/vtk $TCLLIBPATH"
export TK_LIBRARY=$RAPPTURE_INSTALL_DIR/lib/tk8.4:$RAPPTURE_INSTALL_DIR/lib64/tk8.4:$TK_LIBRARY
