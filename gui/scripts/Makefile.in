version 	= $(PACKAGE_VERSION)
name 		= RapptureGUI$(version)

destdir		= $(libdir)/$(name)/scripts

all: tclIndex

tclIndex: $(FILES)
	$(TCLSH) $(srcdir)/../tclconfig/mkindex.tcl --srcdir $(srcdir) \
		--outfile tclIndex

install: install_scripts install_images 

install_scripts: 
	$(MKDIR_P) $(destdir)
	@for i in $(FILES); do \
	    echo "Installing $$i" ; \
	    $(INSTALL) -m 444 $$i $(destdir) ; \
	done 
	$(INSTALL) -m 444 tclIndex $(destdir)

install_images:
	$(MKDIR_P) $(destdir)/images
	@for i in $(srcdir)/images/*.gif $(srcdir)/images/*.png $(srcdir)/images/*.xbm; do \
	    echo "Installing $$i" ; \
	    $(INSTALL) -m 444 $$i $(destdir)/images ; \
	done 

clean:
	$(RM) tclIndex

distclean: clean
	$(RM) Makefile *~

