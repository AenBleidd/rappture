if {[lsearch [namespace children] ::tcltest] == -1} {
    package require tcltest
    package require Rappture
    package require RapptureGUI
    namespace import -force ::tcltest::*
}

#----------------------------------------------------------
#----------------------------------------------------------
# constructor
#
# Rappture::VtkIsosurfaceViewer <name> <servers>
#----------------------------------------------------------
test vtkisosurfaceviewer.constructor.1 {
    constructor, 0 args, auto named
} -setup {
} -body  {
    list [catch {Rappture::VtkIsosurfaceViewer .#auto} msg] $msg
} -cleanup {
    destroy .vtkIsosurfaceViewer0
} -result {0 .vtkIsosurfaceViewer0}

test vtkisosurfaceviewer.constructor.2 {
    value command, explicit name, -plotbackground option
} -setup {
} -body  {
    catch {Rappture::VtkIsosurfaceViewer .foo -plotbackground red} msg
} -cleanup {
    destroy .foo
} -result {0}

test vtkisosurfaceviewer.constructor.3 {
    value command, bad option
} -setup {
} -body  {
    list [catch {Rappture::VtkIsosurfaceViewer .foo -nonexistent foo} msg] $msg
} -cleanup {
    destroy .foo
} -result {1 {unknown option "-nonexistent"}}

::tcltest::cleanupTests
return
