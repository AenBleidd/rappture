#!/bin/sh
# ----------------------------------------------------------------------
#  RAPPTURE ENVIRONMENT
#
#  This is the main script that most people use to invoke the
#  Rappture GUI.  It sets environment variables so that the Rappture
#  GUI driver will work properly for the current installation.
#
# ======================================================================
#  AUTHOR:  Michael McLennan, Purdue University
#  Copyright (c) 2004-2008  Purdue Research Foundation
#
#  See the file "license.terms" for information on usage and
#  redistribution of this file, and for a DISCLAIMER OF ALL WARRANTIES.
# ======================================================================
#
# If you install Rappture elsewhere, edit the line below:
destdir=@prefix@

# no need to edit the rest...
export PATH=$destdir/bin:$PATH

export TCLLIBPATH="$destdir/lib/vtk $TCLLIBPATH"

vtk_library_path=$destdir/lib/vtk-5.2:$destdir/lib/vtk:

export LD_LIBRARY_PATH=$destdir/lib:$vtk_library_path:$LD_LIBRARY_PATH

export DYLD_LIBRARY_PATH=$destdir/lib:$destdir/lib/vtk:$DYLD_LIBRARY_PATH

MATLABPATH=$destdir/lib/matlab:$MATLABPATH
OCTAVE_PATH=:$destdir/lib/octave:$OCTAVE_PATH
OCTAVE_LOADPATH=:$destdir/lib/octave:$OCTAVE_LOADPATH
PERL5LIB=$destdir/lib/perl:$PERL5LIB
RUBYLIB=$destdir/lib/ruby:$RUBYLIB
TCL_LIBRARY=$destdir/lib/tcl8.4:$TCL_LIBRARY
TK_LIBRARY=$destdir/lib/tk8.4:$TK_LIBRARY

export MATLABPATH OCTAVE_PATH OCTAVE_LOADPATH
export PERL5LIB RUBYLIB TCL_LIBRARY TK_LIBRARY

# This is done specifically for python right now.
python="$destdir/bin/python.env"
if test -x "$python" ; then 
  . $python
fi

