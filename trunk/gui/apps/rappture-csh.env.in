# If you install Rappture elsewhere, edit the line below:
set installdir=@prefix@

set bindir=${installdir}/bin
set libdir=${installdir}/lib

set path = ( $bindir $path )

if ( $?TCLLIBPATH ) then
  setenv TCLLIBPATH "${libdir}/vtk"
else
  setenv TCLLIBPATH "${libdir}/vtk $TCLLIBPATH"
endif

if ( $?LD_LIBRARY_PATH ) then
  setenv LD_LIBRARY_PATH "${libdir}:${libdir}/vtk"
else
  setenv LD_LIBRARY_PATH "${libdir}:${libdir}/vtk:$LD_LIBRARY_PATH"
endif

if ( $?DYLD_LIBRARY_PATH ) then
  setenv DYLD_LIBRARY_PATH "${libdir}:${libdir}/vtk"
else
  setenv DYLD_LIBRARY_PATH "${libdir}:${libdir}/vtk:$DYLD_LIBRARY_PATH"
endif

if ( $?MATLABPATH ) then
  setenv MATLABPATH "${libdir}/matlab"
else
  setenv MATLABPATH "${libdir}/matlab:$MATLABPATH"
endif

if ( $?OCTAVE_PATH ) then
  setenv OCTAVE_PATH "${libdir}/octave"
else
  setenv OCTAVE_PATH "${libdir}/octave:$OCTAVE_PATH"
endif

if ( $?PERL5LIB ) then
  setenv PERL5LIB "${libdir}/perl"
else
  setenv PERL5LIB "${libdir}/perl:$PERL5LIB"
endif

if ( $?RUBYLIB ) then
  setenv RUBYLIB "${libdir}/ruby"
else
  setenv RUBYLIB "${libdir}/ruby:$RUBYLIB"
endif

if ( $?TCL_LIBRARY ) then
  setenv TCL_LIBRARY "${libdir}/tcl8.4"
else
  setenv TCL_LIBRARY "${libdir}/tcl8.4:$TCL_LIBRARY"
endif

if ( $?TK_LIBRARY ) then
  setenv TK_LIBRARY "${libdir}/tk8.4"
else
  setenv TK_LIBRARY "${libdir}/tk8.4:$TK_LIBRARY"
endif

if ( $?PYTHONPATH ) then
  setenv PYTHONPATH  "${libdir}/python2.5/site-packages"
else
  setenv PYTHONPATH  "${libdir}/python2.5/site-packages:$PYTHONPATH"
endif
