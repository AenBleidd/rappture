
SHELL		= @SHELL@

srcdir		= @srcdir@
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
datadir		= @datadir@
datarootdir	= @datarootdir@
mandir		= @mandir@
includedir	= @includedir@

pkgdatadir	= $(datadir)/$(PKG_DIR)
pkglibdir	= $(libdir)/$(PKG_DIR)
pkgincludedir	= $(includedir)/$(PKG_DIR)
top_builddir	= .

MKDIR_P		= @MKDIR_P@
INSTALL		= @INSTALL@

SCRIPTS	= \
		$(srcdir)/driver \
		$(srcdir)/grabdata \
		$(srcdir)/nanovis-test \
		rappture \
		rappture.env \
		rerun \
		simsim  \
		about

WINDOWS_SCRIPTS =  \
		$(srcdir)/rappture.cmd \
		$(srcdir)/driver.cmd \
		$(srcdir)/rerun.cmd

all:

install:
	$(MKDIR_P) $(bindir)
	@for i in $(SCRIPTS); do \
	    echo "Installing $$i" ; \
	    $(INSTALL) -m 555 $$i $(bindir) ; \
	done

clean:

distclean: clean
	$(RM) rappture.env rappture simsim
	$(RM) Makefile *~

