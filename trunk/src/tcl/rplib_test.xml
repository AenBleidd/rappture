<?xml version="1.0"?>
<run>
    <tool>
        <title>Graphing Calculator</title>
        <about>Press Simulate to view results.</about>
        <command> @tool/graph @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>Formula</label>
                <hints>Example: 2*x + 1</hints>
            </about>
            <size>30x5</size>
        </string>
        <number id="min">
            <about> <label>From x</label> </about>
            <default>0</default>
            <current>1</current>
        </number>
        <number id="max">
            <about> <label>To x</label> </about>
            <default>2</default>
            <current>3</current>
        </number>
    </input>
    <output>
        <curve id="result">
            <about> <label>Formula: Y vs X</label> </about>
        </curve>
    </output>
</run>

