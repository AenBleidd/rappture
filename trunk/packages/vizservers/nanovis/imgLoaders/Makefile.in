
SHELL = /bin/sh

.PHONY: all install clean distclean

bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir		= @srcdir@

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= ${INSTALL} -m 555
INSTALL_DATA	= ${INSTALL} -m 444
INSTALL_SCRIPT	= ${INSTALL} -m 444
RM		= rm -f
AR		= ar rc
RANLIB		= @RANLIB@
CC		= @CC@
VPATH		= $(srcdir)

RP_DIR          =  @RP_DIR@
RP_INC_SPEC     = -I$(RP_DIR)/include -I$(RP_DIR)/include/rappture2

INCLUDES	= \
		-I$(srcdir) \
		-I$(srcdir)/.. \
		$(RP_INC_SPEC)

CFLAGS		= @CFLAGS@
EXTRA_CFLAGS	= -Wall 
DEFINES		= @DEFINES@
CC_SWITCHES	= $(CFLAGS) $(EXTRA_CFLAGS) $(INCLUDES)

IMGLIB		= ImageLoaders.a

OBJS		= \
		BMPImageLoaderImpl.o \
		Image.o \
		ImageLoader.o \
		ImageLoaderFactory.o \
		ImageLoaderImpl.o 

all: $(IMGLIB)

install: all

$(IMGLIB): $(OBJS)
	$(RM) $@
	$(AR) $@ $(OBJS) 
	$(RANLIB) $@

.cpp.o:
	$(CC) $(CC_SWITCHES) -o $@ -c $<

clean:
	$(RM) *.a *.o

distclean: clean
	$(RM) Makefile *~

BMPImageLoaderImpl.o: BMPImageLoaderImpl.h Image.h $(srcdir)/../Trace.h
Image.o: Image.h
ImageLoader.o: ImageLoader.h ImageLoaderImpl.h Image.h
ImageLoaderFactory.o: ImageLoaderFactory.h ImageLoader.h ImageLoaderImpl.h Image.h $(srcdir)/../Trace.h
ImageLoaderImpl.o: ImageLoaderImpl.h Image.h
