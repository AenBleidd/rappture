bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
VPATH		= $(srcdir)
RM		= rm -f

examples	= \
		binary \
		boolean	\
		choice \
		curve \
		drawing \
		enable \
		field \
		group \
		histogram \
		image \
		integer \
		integer2 \
		loader \
		log \
		mesh \
		note \
		number \
		number2 \
		phase \
		parallelepiped \
		periodicelement \
		sequence \
		string \
		structure \
		table  

destdir		= $(prefix)/examples/zoo

.PHONY: all install clean distclean

all: 
	for i in $(examples) ; do \
	  $(MAKE) -C $$i all || exit 1; \
	done

install: 
	for i in $(examples) ; do \
	  $(MAKE) -C $$i install || exit 1; \
	done

clean:
	for i in $(examples) ; do \
	  $(MAKE) -C $$i clean || exit 1; \
	done

distclean: 
	for i in $(examples) ; do \
	  $(MAKE) -C $$i distclean || exit 1; \
	done
	$(RM) Makefile *~
