
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
VPATH		= $(srcdir)
RM		= rm -f

FILES		= \
		$(srcdir)/2dcloud.gif \
		$(srcdir)/3dcloud.gif \
		$(srcdir)/cloud.tcl \
		$(srcdir)/tool.xml

destdir		= $(prefix)/examples/zoo/cloud

all: 
	$(MAKE) -C matlab all

install: 
	$(INSTALL) -d $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 444  $$i $(destdir) ; \
	done
	$(MAKE) -C matlab install

clean:
	$(MAKE) -C matlab clean

distclean: 
	$(MAKE) -C matlab distclean
	$(RM) Makefile *~
