
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
destdir		= $(prefix)/examples/3D

SHELL		= @SHELL@
INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@

destdir		= $(prefix)/examples

FILES		= \
		demo.bash

SUBDIRS		= \
		3D \
		app-fermi \
		c-example \
		canvas \
		flow \
		graph \
		objects \
		zoo 

.PHONY: all install clean distclean $(SUBDIRS)

all: $(SUBDIRS)

$(SUBDIRS):
	$(MAKE) -C $@ all

install:
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 0555 $$i $(destdir) ; \
	done
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i install || exit 1 ; \
	done

clean:
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i clean || exit 1 ; \
	done

distclean: clean
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i distclean || exit 1 ; \
	done
	$(RM) Makefile *~
