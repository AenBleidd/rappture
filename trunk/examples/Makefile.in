
bindir          = @bindir@
datadir         = @datadir@
datarootdir     = @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
destdir         = $(prefix)/examples/3D

SHELL           = @SHELL@
INSTALL         = @INSTALL@
MKDIR_P         = @MKDIR_P@

destdir         = $(prefix)/examples

FILES		= \
		demo.bash

SUBDIRS		= \
		3D \
		app-fermi \
		c-example \
		canvas \
		flow \
		graph \
		objects \
		zoo


.PHONY: $(SUBDIRS)

all:  build

build:
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i all || exit 1 ; \
	done

install: 
	$(MKDIR_P) $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 555 $$i $(destdir) ; \
	done
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i install || exit 1 ; \
	done

clean:
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i clean || exit 1 ; \
	done

distclean: clean
	for i in $(SUBDIRS) ; do \
	    $(MAKE) -C $$i distclean || exit 1 ; \
	done
	$(RM) Makefile *~

