
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@
VPATH		= $(srcdir)
RM		= rm -f

FILES		= \
		$(srcdir)/flowtest.tcl \
		$(srcdir)/tool.xml

destdir		= $(prefix)/examples/flow

examples	= \
		demo1 \
		demo2 \
		demo3

all: 
	for i in $(examples) ; do \
	  $(MAKE) -C $$i all; \
	done

install: 
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 444  $$i $(destdir) ; \
	done
	for i in $(examples) ; do \
	  $(MAKE) -C $$i install; \
	done

clean:

distclean: 
	$(RM) Makefile *~
