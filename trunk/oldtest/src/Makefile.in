	./$@ ../rplib_test.xml > /dev/null
RpVariable_test: RpVariable_test.cc  
	$(CXX) $(CC_FLAGS) $< -o $@ $(LIBS)
	./$@ ../rplib_test.xml > /dev/null

src:
	$(MAKE) -C src all
jobs:
	$(MAKE) -C jobs all

clean: 
	$(RM) $(OCT_TESTS) $(MATLAB_TESTS) $(CC_TESTS) $(FORTRAN_TESTS) \
		$(OBJS_TESTS)

distclean: clean
	$(RM) Makefile
