#! /bin/sh

DISPLAY=:0
export DISPLAY

install_dir=@prefix@
dir=$( mktemp -d /tmp/nanorun.XXXXXX )

PATH=${dir}/bin:$PATH
LD_LIBRARY_PATH=${dir}/lib:$LD_LIBRARY_PATH
PYMOL_PATH=${dir}/lib/pymol
export PATH LD_LIBRARY_PATH PYMOL_PATH

cp -r ${install_dir}/* ${dir}

cd ${dir}

minutes=20
ulimit -t $(expr ${minutes} \* 60 )

