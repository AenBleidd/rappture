#! /bin/sh

DISPLAY=:0
export DISPLAY

install_dir=@prefix@
dir=$( mktemp -d /tmp/nanorun.XXXXXX )

PATH=${dir}/bin:$PATH
LD_LIBRARY_PATH=${dir}/lib:$LD_LIBRARY_PATH
export PATH LD_LIBRARY_PATH

mkdir ${dir}/bin ${dir}/lib

cp ${install_dir}/lib ${dir}
cp ${install_dir}/bin/voronoi ${install_dir}/bin/nanoscale ${install_dir}/bin/nanovis ${dir}/bin

cd ${dir}

${dir}/bin/nanoscale -d -b 2000 -s 172.18.3.255 -l 2000 -c "${dir}/bin/nanovis -p ${dir}/lib/shaders:${dir}/lib/resources"
