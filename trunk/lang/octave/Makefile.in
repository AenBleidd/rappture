
bindir          = @bindir@
datadir         = @datadir@
datarootdir     = @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir          = @srcdir@

INSTALL         = @INSTALL@
MKDIR_P         = @MKDIR_P@
RM              = rm -f
OCTAVE2		= @OCTAVE2@
OCTAVE3		= @OCTAVE3@

LANGS		= 
ifneq ($(OCTAVE3),)
  LANGS += octave3
endif
ifneq ($(OCTAVE2),)
  LANGS += octave2
endif

.PHONY:	octave2 octave3

all:
	for i in $(LANGS) ; do \
	  $(MAKE) -C $$i all || exit 1 ;\
	done

install:
	for i in $(LANGS) ; do \
	  $(MAKE) -C $$i install || exit 1 ;\
	done

test:
	for i in $(LANGS) ; do \
	  $(MAKE) -C $$i test || exit 1 ;\
	done

clean:
	for i in $(LANGS) ; do \
	  $(MAKE) -C $$i clean ;\
	done

distclean:
	for i in $(LANGS) ; do \
	  $(MAKE) -C $$i distclean ;\
	done
	$(RM) Makefile *~

