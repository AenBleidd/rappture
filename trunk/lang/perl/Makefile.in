
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir		= @srcdir@

INSTALL		= @INSTALL@
RM 		= rm -f
PERL		= @PERL@

build_dir	= build

all: tmp
	$(MAKE) -C $(build_dir)

tmp:
	$(RM) -r $(build_dir)
	$(INSTALL) -d $(build_dir)
	cp -p Makefile.PL $(build_dir)/Makefile.PL
	tar -C $(srcdir) -clf - . | tar -C $(build_dir) -xpf - 
	(cd $(build_dir); $(PERL) Makefile.PL)

install: 
	$(MAKE) -C $(build_dir) install_perl

clean: 
	$(MAKE) -C $(build_dir) clean
	$(RM) -rf $(build_dir)

distclean: clean

