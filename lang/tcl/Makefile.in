
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@

destdir		= $(libdir)/Rappture$(PACKAGE_VERSION)

PACKAGE_VERSION = @PACKAGE_VERSION@

INSTALL		= @INSTALL@

CXX             = @CXX@
CC              = @CC@
CFLAGS_DEBUG    = @CFLAGS_DEBUG@
CFLAGS_OPTIMIZE = @CFLAGS_OPTIMIZE@
STLIB_LD        = @STLIB_LD@
SHLIB_LD        = @SHLIB_LD@
SHLIB_CFLAGS    = @SHLIB_CFLAGS@
SHLIB_LDFLAGS   = @SHLIB_LDFLAGS@
SHLIB_SUFFIX    = @SHLIB_SUFFIX@
CFLAGS_DEFAULT  = @CFLAGS_DEFAULT@
LIB_SEARCH_DIRS = @LIB_SEARCH_DIRS@
CFLAGS          = @CFLAGS@
TCL_VERSION	= @TCL_VERSION@
TK_VERSION	= @TK_VERSION@

RANLIB 		= @RANLIB@
MKDIR_P		= @MKDIR_P@
AR 		= ar
RM		= rm -f

tcllib		= $$RAPPTURE_INSTALL_DIR/lib/tcl$(TCL_VERSION)
tklib		= $$RAPPTURE_INSTALL_DIR/lib/tk$(TK_VERSION)

# The script directory is moved from src/tcl.

.PHONY:	src scripts tests

all: tcl.env
	$(MAKE) -C src all
	$(MAKE) -C scripts all

tcl.env:
	echo 'export TCL_LIBRARY=$(tcllib):$$TCL_LIBRARY' > tcl.env
	echo 'export TK_LIBRARY=$(tklib):$$TK_LIBRARY' >> tcl.env

install: 
	$(MKDIR_P) $(destdir)
	$(INSTALL) -m 0444 pkgIndex.tcl $(destdir)
	$(MAKE) -C src install
	$(MAKE) -C scripts install
	$(INSTALL) -m 0555 tcl.env $(bindir)

test:	
	$(MAKE) -C tests all

clean: 
	$(MAKE) -C src clean
	$(MAKE) -C tests clean
	$(MAKE) -C scripts clean

distclean: clean
	$(MAKE) -C src distclean
	$(MAKE) -C tests distclean
	$(MAKE) -C scripts distclean
	$(RM) Makefile

