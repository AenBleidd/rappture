
bindir          = @bindir@
datadir         = @datadir@
datarootdir     = @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir          = @srcdir@

INSTALL         = @INSTALL@
SOEXT           = @SHLIB_SUFFIX@


HAVE_RUBY_DEVEL = @HAVE_RUBY_DEVEL@
RUBY            = @RUBY@
RUBY_VERSION    = @RUBY_VERSION@
RUBY_CPPFLAGS   = @RUBY_CPPFLAGS@
RUBY_EXTRA_LIBS = @RUBY_EXTRA_LIBS@
RUBY_LDFLAGS    = @RUBY_LDFLAGS@
RUBY_SITE_PKG   = @RUBY_SITE_PKG@
RUBY_VERSION_RV = @RUBY_VERSION_RV@
RUBY_PLATFORM   = @RUBY_PLATFORM@
destdir         = $(libdir)/ruby
rubydir         = $$RAPPTURE_INSTALL_DIR/lib/ruby
envfile		= _ruby.env

CXX             = @CXX@
CC              = @CC@
CFLAGS_DEBUG    = @CFLAGS_DEBUG@
CFLAGS_OPTIMIZE = @CFLAGS_OPTIMIZE@
STLIB_LD        = @STLIB_LD@
SHLIB_LD        = @SHLIB_LD@
SHLIB_CFLAGS    = @SHLIB_CFLAGS@ 
SHLIB_LDFLAGS   = @SHLIB_LDFLAGS@ $(RUBY_LDFLAGS)
SHLIB_SUFFIX    = @SHLIB_SUFFIX@
CFLAGS_DEFAULT  = @CFLAGS_DEFAULT@
LIB_SEARCH_DIRS = @LIB_SEARCH_DIRS@

DEFINES         = -Wall -DRAISE_EXCEPTIONS
CFLAGS          = @CFLAGS@ @SHLIB_CFLAGS@
INCLUDES        = -I$(srcdir) \
		  -I$(srcdir)/../../src/core \
		  -I$(includedir) \
		  $(RUBY_CPPFLAGS)

RANLIB          = @RANLIB@
MKDIR_P         = @MKDIR_P@
AR              = ar
VPATH           = $(srcdir)
RM              = rm -f

CDEBUGFLAGS     = -g -Wall

LIBS            = \
		-L../../src/core -lrappture \
		$(RUBY_LDFLAGS)

CC_SWITCHES     = $(CFLAGS) $(CFLAGS_DEBUG) $(INCLUDES) $(DEFINES)
CXX_SWITCHES    = $(CFLAGS) $(CFLAGS_DEBUG) $(INCLUDES) $(DEFINES)


OBJS            = \
		Ruby_Rappture.o

lib             = Rappture$(SOEXT)

all: $(lib) $(envfile)

$(lib): $(OBJS)
	$(SHLIB_LD) $(SHLIB_LDFLAGS) -o $@ $(OBJS) \
		$(LIB_SEARCH_DIRS) $(LIBS)
install: $(lib) $(envfile)
	$(MKDIR_P) $(destdir)
	$(INSTALL) -m 555 $(lib) $(destdir)
	$(INSTALL) -m 555 $(envfile) $(bindir)

clean:
	$(RM) $(lib) $(OBJS)

distclean: clean
	$(RM) Makefile *~ build.rb $(envfile)

Makefile.ruby: build.rb
	$(RUBY) build.rb

.cc.o:
	$(CXX) $(CXX_SWITCHES) -c $?
.c.o:
	$(CC) $(CC_SWITCHES)-c $?

$(envfile):
	echo 'export RUBYLIB=$(rubydir):$$RUBYLIB' > $(envfile)

old: Makefile.ruby
	$(MAKE) -f Makefile.ruby all
