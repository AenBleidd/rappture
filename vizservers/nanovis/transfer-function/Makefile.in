
SHELL = /bin/sh

.PHONY: all install clean distclean

bindir          = @bindir@
datadir		= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir		= @srcdir@

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= ${INSTALL} -m 555
INSTALL_DATA	= ${INSTALL} -m 444
INSTALL_SCRIPT	= ${INSTALL} -m 444
RM		= rm -f
AR		= ar rc
RANLIB		= @RANLIB@
CC		= @CC@
VPATH		= $(srcdir)

GL_INC_SPEC	= -I/usr/include/GL

INCLUDES	= -I$(srcdir) $(GL_INC_SPEC)

CFLAGS		= @CFLAGS@
EXTRA_CFLAGS	= -Wall 
DEFINES		= @DEFINES@
CC_SWITCHES	= $(CFLAGS) $(EXTRA_CFLAGS) $(INCLUDES)

TFLIB		= transfer-function.a

OBJS		= \
		ColorGradient.o \
		ColorGradientGLUTWindow.o \
		ColorPaletteWindow.o \
		ControlPoint.o \
		MainWindow.o \
		TransferFunctionGLUTWindow.o

all: $(TFLIB)

install: 

$(TFLIB): $(OBJS)
	$(RM) $@
	$(AR) $@ $(OBJS) 
	$(RANLIB) $@

.cpp.o:
	$(CC) $(CC_SWITCHES) -o $@ -c $<

clean:
	$(RM) $(TFLIB) $(OBJS)

distclean: clean
	$(RM) Makefile *~

