
bindir          = @bindir@
datadir         = @datadir@
datarootdir     = @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir		= @srcdir@

destdir		= $(prefix)/examples/app-fermi/fortran

INSTALL         = @INSTALL@
MKDIR_P		= @MKDIR_P@

FC              = @F77@
FCFLAGS		= @CFLAGS@ 
FCDEBUGFLAGS	= -Wall -g
VPATH		= $(srcdir)

INCLUDES    	= -I$(srcdir)/../../../src/core
LIBS		= -L../../../src/core -lrappture \
		  -L$(libdir) -lexpat -lz

FC_SWITCHES 	= $(FCFLAGS) $(FCDEBUGFLAGS) $(DEFINES) $(INCLUDES)

FILES		= \
		$(srcdir)/fermi.f \
		$(srcdir)/tool.xml 

all: fermi

fermi: $(srcdir)/fermi.f
	$(FC) $(FC_SWITCHES) $< -o $@ $(LIBS)

install: fermi
	$(MKDIR_P) $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 444 $$i $(destdir) ; \
	done
	$(INSTALL) -m 555 fermi $(destdir)


clean:
	$(RM) fermi run*.xml

distclean: clean
	$(RM) Makefile
