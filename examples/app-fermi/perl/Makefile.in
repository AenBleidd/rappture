
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
prefix          = @prefix@
srcdir		= @srcdir@

destdir		= $(prefix)/examples/app-fermi/perl

INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@

FILES 		= \
		$(srcdir)/tool.xml \
		$(srcdir)/fermi.pl

all:	

install: 
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 0444 $$i $(destdir) ; \
	done
clean:

distclean: clean
	$(RM) Makefile

