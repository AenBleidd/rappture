<?xml version="1.0"?>
<run>
    <tool>
        <about>Press Simulate to view results.</about>
        <command> @tool/fermi_example @driver</command>
    </tool>
    <input>
        <group id="ambient">
            <number id="temperature">
                <label>Ambient temperature</label>
                <units>K</units>
                <min>120K</min>
                <max>500K</max>
                <default>300K</default>
                <preset>
                    <value>400K</value>
                    <label>400K (hot)</label>
                </preset>
                <preset>
                    <value>300K</value>
                    <label>300K (room temperature)</label>
                </preset>
                <preset>
                    <value>200K</value>
                    <label>200K (cold)</label>
                </preset>
            </number>
        </group>
        <number id="Ef">
            <label>Fermi Level</label>
            <units>eV</units>
            <min>-10eV</min>
            <max>10eV</max>
            <default>-5.5eV</default>
        </number>
    </input>
</run>

