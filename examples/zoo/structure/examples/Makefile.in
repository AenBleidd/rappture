
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@
VPATH		= $(srcdir)
RM		= rm -f

FILES		= \
		$(srcdir)/fields.xml \
		$(srcdir)/molecule.xml \
		$(srcdir)/simple.xml \
		$(srcdir)/image.xml \
		$(srcdir)/params.xml


destdir		= $(prefix)/examples/zoo/structure/examples

all: 

install: 
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 0444 $$i $(destdir) ; \
	done

clean:

distclean: 
	$(RM) Makefile *~
