
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@
VPATH		= $(srcdir)
RM		= rm -f

FILES		= \
		$(srcdir)/curve.tcl \
		$(srcdir)/curve1.gif \
		$(srcdir)/curve2.gif \
		$(srcdir)/tool.xml

destdir		= $(prefix)/examples/zoo/curve

.PHONY: all install clean distclean

all: 

install: all
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 0444  $$i $(destdir) ; \
	done

clean:

distclean: clean
	$(RM) Makefile *~
