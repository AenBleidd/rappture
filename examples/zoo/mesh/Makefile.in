
bindir          = @bindir@
datadir		= @datadir@
datarootdir	= @datarootdir@
exec_prefix     = @exec_prefix@
includedir      = @includedir@
libdir          = @libdir@
mandir          = @mandir@
srcdir		= @srcdir@
prefix          = @prefix@

INSTALL		= @INSTALL@
MKDIR_P		= @MKDIR_P@
VPATH		= $(srcdir)
RM		= rm -f

FILES		= \
		$(srcdir)/file.vtk \
		$(srcdir)/mesh.m \
		$(srcdir)/mesh.tcl \
		$(srcdir)/mesh.vtk \
		$(srcdir)/particle_data.txt \
		$(srcdir)/points.txt \
		$(srcdir)/substrate_data.txt \
		$(srcdir)/tool.xml \
		$(srcdir)/tool_octave.xml \
		$(srcdir)/triangles.txt

destdir		= $(prefix)/examples/zoo/mesh

.PHONY: all install clean distclean

all: 

install: all
	$(MKDIR_P) -m 0755 $(destdir)
	for i in $(FILES) ; do \
	  $(INSTALL) -m 0444  $$i $(destdir) ; \
	done

clean:

distclean: clean
	$(RM) Makefile *~
