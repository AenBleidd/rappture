<?xml version="1.0"?>
<run>
    <tool>
        <title>Graphing Calculator</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/graph.py @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>Formula</label>
                <hints>Example: 2*x + 1</hints>
            </about>
            <size>30x5</size>
        </string>
        <number id="min">
            <about> <label>From x</label> </about>
            <default>0</default>
        </number>
        <number id="max">
            <about> <label>To x</label> </about>
            <default>1</default>
        </number>
    </input>
</run>
