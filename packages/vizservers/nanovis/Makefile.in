VPATH           = $(srcdir)

INSTALL         = @INSTALL@
MKDIR_P         = @MKDIR_P@

#Why are these files installed owner writable?
INSTALL_PROGRAM = ${INSTALL} -m 0555
INSTALL_DATA    = ${INSTALL} -m 0444
INSTALL_SCRIPT  = ${INSTALL} -m 0444
RM              = rm -f

AUXSRC          = config.h define.h

CG_INC_SPEC     = @CG_INC_SPEC@
